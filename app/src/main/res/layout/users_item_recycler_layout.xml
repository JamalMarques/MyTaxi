<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_small"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingTop="@dimen/spacing_small"
    android:paddingBottom="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/card_corner_default"
    app:cardElevation="@dimen/card_elevation_default">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_small"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/profile_width_height"
            android:layout_height="@dimen/profile_width_height"
            app:cardCornerRadius="@dimen/card_corner_default"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>

        <com.mytaxi.app.customViews.TextViewMedium
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:maxLines="1"
            android:gravity="center|top"
            android:text="User Name"
            android:textColor="@color/gray1_H" />

    </LinearLayout>

</android.support.v7.widget.CardView>